{% extends 'base.html.twig' %}

{% block title %}Conference {{conference}}{% endblock %}

{% block body %}
    <h1 style="text-align:center;">
        Conference {{conference}}
    </h1>

    {% if comments | length > 0 %}
        <h2>Commentaires ({{ comments | length }})</h2>
        {% for com in comments %}
            <h4> {{ com.author }} le {{ com.createdAt | date('d-m-Y Ã  H:i:s') }}  </h4>
            <h5> {{ com.email }} </h5>
            <p> {{ com.text }} </p>
        {% endfor %}
        {% if previous >= 0 %}
            <a href="{{ path('SingleConference', {id: conference.id, offset: previous}) }}">Previous</a>
        {% endif %}
        {% if next < comments | length %}
            <a href="{{ path('SingleConference', {id: conference.id, offset: next}) }}">Next</a>
        {% endif %}
    {% else %}
        <p>Aucun Commentaire</p>
    {% endif %}
    
{% endblock %}
