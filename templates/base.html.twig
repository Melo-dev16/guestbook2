<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="/favicon.ico">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <h1><a href="{{ path('Conferences') }}">Guestbook</a></h1>
            <ul>
                {% for conference in conferences %}
                    <li><a href="{{ path('SingleConference', {id: conference.id}) }}">{{ conference }}</a></li>
                {% endfor %}
            </ul>
        </header>
        <hr>
        {% block body %}{% endblock %}
    </body>
</html>
